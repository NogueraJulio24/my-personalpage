<p id="notice"><%= notice %></p>

<div class="container">
  <!-- Title -->
  <h1 class="text-center margin-top-50">Last Posts</h1><hr>
  <%= link_to 'New Posts', new_post_path %>

  <!--start posts card -->
  <% @posts.each do |post| %>
    <div class="card mb-3 shadow-lg p-3 mb-5 bg-white rounded zoom" style="max-width: 100%;">
      <div class="row no-gutters">
        <div class="col-md-2">
          <%= image_tag post.image.url, :class => "image responsive" %>
        </div>
        <div class="col-md-10">
          <div class="card-body">
            <h5 class="card-title"><%= post.title %></h5>
            <p class="card-text"><%= raw post.body.truncate(150) %><%= link_to ' Leer articulo', post %></p>
            <p class="card-text"><small class="text-muted"><%= post.created_at %></small></p>
            <!--<td><%= link_to 'Show', post %></td>
            <td><%= link_to 'Edit', edit_post_path(post) %></td>
            <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <!-- end post card -->
</div>


